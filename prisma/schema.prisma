// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // easiest for localhost & Netlify
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  duration  Int      // in minutes (study timer)
  completed Boolean  @default(false)
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  exam      Exam?    @relation(fields: [examId], references: [id])
  examId    Int?
  createdAt DateTime @default(now())
}

model Exam {
  id        Int      @id @default(autoincrement())
  name      String
  date      DateTime
  tasks     Task[]
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime @default(now())
}

